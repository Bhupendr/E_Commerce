<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_20"
                android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="@dimen/size_50"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_40"
                    android:text="@string/Accountinfo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_22"
                    android:fontFamily="@font/muli_bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/name_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_person_24"
                        android:backgroundTint="@color/black"/>


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:layout_toRightOf="@id/name_pic"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_semibold"
                        android:layout_marginLeft="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:layout_below="@id/name"
                        android:layout_toRightOf="@id/name_pic"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_18"
                        android:fontFamily="@font/muli_regular"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/phone_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_phone"
                        android:backgroundTint="@color/black"/>


                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_no"
                        android:layout_toRightOf="@id/phone_pic"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_semibold"
                        android:layout_marginLeft="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/mobile_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_no"
                        android:layout_below="@id/phone"
                        android:layout_toRightOf="@id/phone_pic"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_18"
                        android:fontFamily="@font/muli_regular"/>


                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/email_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_email_24"
                        android:backgroundTint="@color/black"/>


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_toRightOf="@id/email_pic"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_semibold"
                        android:layout_marginLeft="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/email_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_below="@id/email"
                        android:layout_toRightOf="@id/email_pic"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_18"
                        android:fontFamily="@font/muli_regular"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/address_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_location_city_24"
                        android:backgroundTint="@color/black"/>


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:layout_toRightOf="@id/address_pic"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_semibold"
                        android:layout_marginLeft="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/address_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:layout_below="@id/address"
                        android:layout_toRightOf="@id/address_pic"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_18"
                        android:fontFamily="@font/muli_regular"/>


                </RelativeLayout>



                <Button
                    android:id="@+id/logout"
                    android:layout_width="@dimen/size_180"
                    android:layout_height="@dimen/size_55"
                    android:layout_marginTop="@dimen/size_40"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/log_out"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_logout"
                    android:background="@drawable/buttonclickeffect"
                    android:drawableTint="@color/white"
                    android:textAllCaps="false"/>






    </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>