<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/graph_size_350"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:layout_gravity="center"
    android:id="@+id/card"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="@dimen/graph_size_350"
        android:layout_height="wrap_content"
        android:id="@+id/general_details"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">


<ImageView
    android:id="@+id/imagetick"
    android:layout_gravity="center_horizontal"
    android:layout_width="@dimen/size_90"
    android:layout_height="@dimen/size_90"
    android:layout_marginTop="@dimen/size_60"
    app:srcCompat="@drawable/animated_check"/>


        <TextView
            android:id="@+id/order_placed_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center"
            android:text="Order successfully."
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            android:fontFamily="@font/muli_semibold"
            android:layout_margin="@dimen/size_20"/>



        <Button
            android:id="@+id/proceed"
            android:layout_width="250dp"
            android:layout_height="@dimen/size_50"
            android:background="@drawable/rounded_grey_editext"
            app:backgroundTint="@color/colorPrimary"
            android:text="@string/okay"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_30"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/muli_bold"
            android:textAllCaps="false"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>