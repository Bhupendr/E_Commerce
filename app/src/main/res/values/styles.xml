<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/size_25</item>
        <item name="cornerSizeTopLeft">@dimen/size_25</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_semibold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

</resources>